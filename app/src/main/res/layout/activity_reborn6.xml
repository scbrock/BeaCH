<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stephenbrock.trial.Reborn6">

    <ScrollView
        android:layout_width="374dp"
        android:layout_height="506dp"
        tools:layout_editor_absoluteY="2dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Cognitive"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:text="Eight Habits that Improve Cognitive Function\n\n 1. Physical Activity\n\n 2. Openness to Experience\n\n 3. Curiosity and Creativity\n\n 4. Social Connections\n\n 5. Mindfulness Meditation\n\n 6. Brain-Training Games\n\n 7. Get Enough Sleep\n\n 8. Reduce Chronic Stress\n\nhttps://www.psychologytoday.com/blog/the-athletes-way/201403/eight-habits-improve-cognitive-function\n\n"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="30dp" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
